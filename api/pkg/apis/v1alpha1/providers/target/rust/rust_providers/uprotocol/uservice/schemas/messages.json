    "$id": "https://github.com/eclipse-symphony/schemas/messages.json",
    "title": "Messages",
    "$defs": {
        "Request": {
            "type": "object",
            "properties": {
                "deployment": { "$ref": "./deploymentspec.json" },
                "components": {
